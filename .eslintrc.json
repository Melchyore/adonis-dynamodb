{
  "extends": [
    "plugin:adonis/typescriptPackage",
    "prettier"
  ],
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "ignorePatterns": [
    "bin/test/*.ts"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      "never"
    ],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "trailingComma": "none"
      }
    ]
  }
}
